{
    "name": "bataille-front",
    "version": "0.4.3",
    "description": "",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/HugoGresse/bataille.git"
    },
    "author": "Hugo Gresse",
    "license": "SEE LICENSE IN LICENSE",
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "start-server": "ts-node-dev --respawn --project src/server/tsconfig.dev.json src/server/server.ts",
        "build:server": "rm -rf lib && tsc --build src/server/tsconfig.json",
        "build:server:run": "npm run build:server && node lib/src/server/server.js",
        "release:patch": "npm run build:server && git add . && git commit -m \"update build\" && npm version patch",
        "release:minor": "npm run build:server && git add . && git commit -m \"update build\" && npm version minor",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/node-fetch": "^2.5.12",
        "@types/react-router-dom": "^5.1.8",
        "@types/uuid": "^8.3.0",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.0",
        "serve": "^11.3.2",
        "ts-node-dev": "^1.1.6"
    },
    "dependencies": {
        "@emotion/react": "^11.4.1",
        "@emotion/styled": "^11.3.0",
        "@material-ui/core": "^5.0.0-beta.4",
        "@material-ui/icons": "^5.0.0-beta.4",
        "@types/react": "^17.0.5",
        "@types/react-dom": "^17.0.5",
        "node-fetch": "^2.6.1",
        "phaser": "^3.54.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.3",
        "socket.io": "^4.1.1",
        "socket.io-client": "^4.1.1",
        "typescript": "^4.2.4",
        "uuid": "^8.3.2"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,json,css,md}": [
            "prettier --write"
        ]
    }
}
